{
    "title": "hyper key actions",
    "rules": [
        {
            "description": "hyper n / m to switch workspace",
            "manipulators": [
                {
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                              ]
                        }
                    },
                    "to": [
                        {
                          "key_code": "left_arrow",
                          "modifiers": ["control"]
                        }
                      ]
                },
                {
                    "from": {
                        "key_code": "m",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                              ]
                        }
                    },
                    "to": [
                        {
                          "key_code": "right_arrow",
                          "modifiers": ["control"]
                        }
                      ],
                      "type": "basic"
                }
            ]
        },
        {
            "description": "hyper + 7 for backslash",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "7",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "7",
                            "modifiers": [
                                "left_shift",
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "hyper + f for fullscreen",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f",
                            "modifiers": [
                                "left_control",
                                "left_command"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "hyper + backspace to delete word",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "left_shift",
                                "left_command",
                                "left_control",
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "backspace",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}